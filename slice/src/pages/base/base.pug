include ./base-data
block variables

include ../../components/layout/layout
include ../../components/header/header
include ../../components/b-top/b-top
include ../../components/footer/footer
include ../../components/b-news-sidebar/b-news-sidebar
include ../../components/b-info/b-info

doctype html
html
  head
    meta(charset='utf-8')
    meta(name="HandheldFriendly" content="false")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover")
    <!--[if IE]>
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    <![endif]-->

    title
      block title

    include lib
  body(class= bodyClass)
    .outer-wrapper
      block header
        +header({menuItems: locals.menuItems, socialItems: locals.socialItems})
      block b-top
        +b-top()
      .inner-wrapper
        .content-wrapper
          .container.clearfix
            block main
            block sidebar
      block footer
        +footer({items: locals.footerItems, socialItems: locals.socialItems})
    block scripts