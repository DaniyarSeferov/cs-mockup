block config
	include config.pug

doctype html
html
	head
		meta(charset="utf-8")
		title #{pageTitle}
		block metatags
			meta(name="description" content="Page description.")
			meta(name="viewport" content="width=device-width initial-scale=1.0")
			meta(http-equiv="X-UA-Compatible", content="IE=Edge")
	body(class=bodyClasses)
		//- content here
		include _header.pug

		block content

		footer
			include _footer.pug